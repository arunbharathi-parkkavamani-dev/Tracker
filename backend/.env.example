# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tracker
DB_NAME=tracker

# Redis Configuration (for caching and job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Cloud Storage Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_IMAGES_ACCOUNT_HASH=your-images-account-hash

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_CLOUD_UPLOAD=false

# Performance Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_PROFILE=1800
CACHE_TTL_EMPLOYEE_LIST=600
CACHE_TTL_TASK_SUMMARY=300
CACHE_TTL_ATTENDANCE=3600
CACHE_TTL_STATS=300

# Job Queue Configuration
QUEUE_CONCURRENCY_PUSH=10
QUEUE_CONCURRENCY_EMAIL=5
QUEUE_CONCURRENCY_COMPUTE=3
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=10

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
NOTIFICATION_BATCH_SIZE=100

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true
MEMORY_USAGE_ALERT_THRESHOLD=1073741824

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
MOCK_EXTERNAL_SERVICES=true